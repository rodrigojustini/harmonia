generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("member") // "leader" ou "member"
  funcao       String? // guitarra, teclado, voz, bateria, etc
  ativo        Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cultos             Culto[]
  escalas            Escala[]
  escalaMembros      EscalaMembro[]
  trocasSolicitadas  TrocaEscala[]  @relation("SolicitanteTroca")
  trocasRecebidas    TrocaEscala[]  @relation("ReceptorTroca")
  trocasAprovadas    TrocaEscala[]  @relation("AprovadorTroca")
  musicasAdicionadas EscalaMusica[]
  historicos         Historico[]
}

model Musica {
  id          Int      @id @default(autoincrement())
  titulo      String
  tomOriginal String?
  link        String?
  observacoes String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cultos CultoMusica[]
}

model Membro {
  id          Int       @id @default(autoincrement())
  nome        String
  voz         String?
  funcao      String?
  aniversario DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Culto {
  id        Int      @id @default(autoincrement())
  data      DateTime
  nome      String
  shareSlug String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  musicas CultoMusica[]
}

model CultoMusica {
  id       Int @id @default(autoincrement())
  ordem    Int
  cultoId  Int
  musicaId Int

  culto  Culto  @relation(fields: [cultoId], references: [id])
  musica Musica @relation(fields: [musicaId], references: [id])
}

// ===== NOVOS MODELS PARA SISTEMA DE ESCALA =====

model Escala {
  id        Int      @id @default(autoincrement())
  mes       Int // 1-12
  ano       Int // 2025, 2026...
  aprovada  Boolean  @default(false)
  criadaPor Int
  criadoEm  DateTime @default(now())

  criador User           @relation(fields: [criadaPor], references: [id])
  membros EscalaMembro[]
  musicas EscalaMusica[]
  trocas  TrocaEscala[]

  @@unique([mes, ano])
}

model EscalaMembro {
  id       Int      @id @default(autoincrement())
  escalaId Int
  userId   Int
  data     DateTime
  funcao   String // guitarra, teclado, voz, etc

  escala Escala @relation(fields: [escalaId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([escalaId, data, funcao])
}

model EscalaMusica {
  id            Int      @id @default(autoincrement())
  escalaId      Int
  data          DateTime
  titulo        String
  tom           String?
  link          String?
  ordem         Int      @default(1)
  adicionadoPor Int
  adicionadoEm  DateTime @default(now())

  escala Escala @relation(fields: [escalaId], references: [id])
  user   User   @relation(fields: [adicionadoPor], references: [id])
}

model TrocaEscala {
  id            Int      @id @default(autoincrement())
  escalaId      Int
  solicitanteId Int
  receptorId    Int
  data          DateTime
  funcao        String
  status        String   @default("pendente") // pendente, aceita_receptor, aprovada, recusada
  observacao    String?

  // Datas de ação
  solicitadoEm DateTime  @default(now())
  aceitoEm     DateTime?
  aprovadoEm   DateTime?

  // Responsáveis
  aprovadoPor Int?

  // Relacionamentos
  escala      Escala @relation(fields: [escalaId], references: [id])
  solicitante User   @relation("SolicitanteTroca", fields: [solicitanteId], references: [id])
  receptor    User   @relation("ReceptorTroca", fields: [receptorId], references: [id])
  aprovador   User?  @relation("AprovadorTroca", fields: [aprovadoPor], references: [id])
}

model Historico {
  id       Int      @id @default(autoincrement())
  userId   Int
  acao     String // "escala_criada", "troca_solicitada", "troca_aprovada", "musica_adicionada", etc
  detalhes String // JSON com detalhes da ação
  data     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
