{
  "name": "harmonia",
  "version": "1.0.0",
  "description": "Sistema completo para gerenciar repertório musical, membros da equipe e organização de cultos com autenticação segura e interface moderna.",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "setup": "cd backend && npm install && npx prisma generate && npx prisma migrate deploy && node prisma/seed.js",
